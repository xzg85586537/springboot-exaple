<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.mapper.SysRoleMapper">
    <resultMap id="BaseResultMap" type="com.cn.entity.SysRole">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
    </resultMap>

    <select id="getRoles" parameterType="string" resultType="com.cn.entity.SysRole">
        select sr.id,sr.role_name from sys_role sr
        left join sys_user_role sur
        on sur.role_id=sr.id
        <where>
            <if test='userId!=null and userId!=""'>
                sur.user_id=#{userId}
            </if>
        </where>
    </select>
</mapper>